  "item": [
    {
      "name": "Ventas",
      "item": [
        {
          "name": "Listar Ventas (Filtro Mes)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/ventas?filtro=mes&fechaSeleccionada=2026-01",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ventas"
              ],
              "query": [
                {
                  "key": "filtro",
                  "value": "mes"
                },
                {
                  "key": "fechaSeleccionada",
                  "value": "2026-01"
                }
              ]
            }
          }
        },
        {
          "name": "Crear Venta",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"fecha\": \"2026-01-20\",\n    \"categoria\": \"Ventas Directas\",\n    \"monto\": 5000.00,\n    \"descripcion\": \"Venta de prueba\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{BASE_URL}}/ventas"
            }
          }
        },
        {
          "name": "Actualizar Venta",
          "request": {
            "method": "PUT",
            "header": [],
